@model CashFlow.Application.DTOs.FinancialEntryDTO

<h2>Criar Nova Entrada Financeira</h2>

<form asp-action="Create" asp-controller="FinancialEntry" method="post">
    <input type="hidden" asp-for="SheetId" value="@ViewBag.SheetId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EntryDate"></label>
        <input asp-for="EntryDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
