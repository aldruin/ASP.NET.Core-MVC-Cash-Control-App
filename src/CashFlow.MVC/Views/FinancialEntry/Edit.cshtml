@model CashFlow.Application.DTOs.FinancialEntryDTO

<div class="container mt-3">
    <h2>Editar Entrada Financeira</h2>

    <form asp-action="Edit" asp-controller="FinancialEntry" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Nome</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Value">Valor</label>
            <input asp-for="Value" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Category">Categoria</label>
            <input asp-for="Category" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="EntryDate">Data de Entrada</label>
            <input asp-for="EntryDate" type="date" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

    <a asp-action="Index" asp-controller="Sheet" class="btn btn-secondary mt-3">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
