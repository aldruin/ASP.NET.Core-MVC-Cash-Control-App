@model CashFlow.Application.DTOs.FinancialExpenseDTO

<div class="container mt-3">
    <h2>Editar Despesa</h2>

    <form asp-action="Edit" asp-controller="FinancialExpense" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Nome</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Value">Valor</label>
            <input asp-for="Value" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Category">Categoria</label>
            <input asp-for="Category" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="ExpenseDate">Data de Despesa</label>
            <input asp-for="ExpenseDate" type="date" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

    <p>
        <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="FinancialExpense">Voltar para a Lista</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    h2 {
        color: #007bff;
    }

    p {
        margin-top: 20px;
    }
</style>
