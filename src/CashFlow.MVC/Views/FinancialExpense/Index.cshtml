@model IEnumerable<CashFlow.Application.DTOs.FinancialExpenseDTO>

<div class="container mt-3">
    <h2>Despesas Financeiras</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Valor</th>
                <th>Categoria</th>
                <th>Data de Despesa</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Name</td>
                    <td>@expense.Value</td>
                    <td>@expense.Category</td>
                    <td>@expense.ExpenseDate</td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Detalhes</a>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Editar</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h2 {
        color: #007bff;
    }
</style>
