@model SheetDetailsViewModel

<div class="container mt-3">
    <h2>@Html.DisplayFor(model => model.Sheet.Name)</h2>

    <div class="mb-4">
        <h4>Entradas</h4>
        <p>
            <a class="btn btn-outline-secondary" asp-action="Create" asp-controller="FinancialEntry" asp-route-sheetId="@Model.Sheet.Id">Inserir uma nova Entrada</a>
        </p>

        @if (Model.Entries != null && Model.Entries.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th>Categoria</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td>@entry.Name</td>
                            <td>@entry.Value</td>
                            <td>@entry.Category</td>
                            <td>@entry.EntryDate</td>
                            <td>
                                <a class="btn btn-outline-info" asp-action="Details" asp-controller="FinancialEntry" asp-route-id="@entry.Id">Detalhes</a>
                                <a class="btn btn-outline-warning" asp-action="Edit" asp-controller="FinancialEntry" asp-route-id="@entry.Id">Editar</a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="FinancialEntry" asp-route-id="@entry.Id">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nenhuma entrada encontrada.</p>
        }
    </div>

    <!-- Adicione uma linha após "Dezembro" -->
    <hr />

    <div class="mb-4">
        <h4>Saídas</h4>
        <p>
            <a class="btn btn-outline-secondary" asp-action="Create" asp-controller="FinancialExpense" asp-route-sheetId="@Model.Sheet.Id">Inserir uma nova Saída</a>
        </p>

        @if (Model.Expenses != null && Model.Expenses.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th>Categoria</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.Name</td>
                            <td>@expense.Value</td>
                            <td>@expense.Category</td>
                            <td>@expense.ExpenseDate</td>
                            <td>
                                <a class="btn btn-outline-info" asp-action="Details" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Detalhes</a>
                                <a class="btn btn-outline-warning" asp-action="Edit" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Editar</a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="FinancialExpense" asp-route-id="@expense.Id">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nenhuma entrada de despesa encontrada.</p>
        }
    </div>

    <!-- Adicione uma linha após a lista de entradas -->
    <hr />

    <div class="mt-4">
        <p>
            <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a Lista</a>
        </p>
    </div>
</div>
